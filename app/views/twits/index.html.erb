<h1>Listing twits</h1>

<table>
  <thead>
    <tr>
        <th>User ID</th>
  
        <th>Twit</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @twits.each do |twit| %>
      <tr>
        <td><%= twit.user_id %></td>
        <td><%= twit.twit_id %></td>
        <td><%= twit.twit %></td>
        <td><%= link_to 'Show', twit %></td>
        <td><%= link_to 'Edit', edit_twit_path(twit) %></td>
        <td><%= link_to 'Destroy', twit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

